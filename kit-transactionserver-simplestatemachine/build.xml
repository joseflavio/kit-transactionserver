<?xml version="1.0" encoding="UTF-8"?>
<project name="kit-transactionserver-simplestatemachine" default="compile" basedir=".">

	<property name="lib.dir" value="../kit-transactionserver-main/"/>

	<path id="project.classpath">
		<fileset dir="${lib.dir}/lib">
			<include name="slf4j-api-1.6.2.jar"/>
		</fileset>
	</path>
	

	<target name="compile">
		<echo>${user.dir}</echo>
		<mkdir dir="tmp"/>
		<javac destdir="tmp" debug="off" deprecation="on">
			<src path="src"/>
			<classpath refid="project.classpath"/>
		</javac>
	</target>

	<target name="GenerateJar">

		<manifest file="MANIFEST.MF">
			<attribute name="Built-By" value="Jose Flavio Aguilar Paulino"/>
			<attribute name="Main-Class" value="TestDatabaseConnection"/>
			<attribute name="Class-Path" value="${lib.dir}/slf4j-api-1.6.2.jar"/>
		</manifest>

		<mkdir dir="build"/>

		<jar jarfile="build/testconnection.jar" manifest="MANIFEST.MF" basedir="tmp"/>

	</target>

</project>